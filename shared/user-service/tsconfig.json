{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "."
  }
}
